generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Ticket {
  id            Int      @id @default(autoincrement())
  titulo        String
  descripcion   String
  estatus       Status
  fechaCreacion DateTime @default(now())
}

enum Status {
  PENDIENTE
  EN_PROGRESO
  TERMINADO
}


