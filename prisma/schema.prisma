generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Ticket {
  id            Int      @id @default(autoincrement())
  titulo        String
  descripcion   String
  estatus       Status
  fechaCreacion DateTime @default(now())

  userId        Int
  user         User     @relation(fields: [userId], references: [id])
}

enum Status {
  PENDIENTE
  EN_PROCESO
  TERMINADO
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  name     String
  tickets  Ticket[]
}